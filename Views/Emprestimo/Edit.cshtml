@model BibliotecaMvc.Models.EmprestismoDeLivros

<h2>Devolução de Livro</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IdTransacao" />
    <div class="form-group">
        <label asp-for="IdTransacao">ID da Transação:</label>
        <input asp-for="IdTransacao" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="IdLivro">ID do Livro:</label>
        <input asp-for="IdLivro" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdUsuario">ID do Usuário:</label>
        <input asp-for="IdUsuario" class="form-control" />
    </div>
    <!-- Adiciona um input hidden para IdTransacao se necessário -->
    <input type="hidden" asp-for="IdTransacao" />
    <button type="submit" class="btn btn-primary">Realizar Devolução</button>
</form>
