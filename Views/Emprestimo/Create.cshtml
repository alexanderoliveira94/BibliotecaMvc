@model BibliotecaMvc.Models.EmprestismoDeLivros

<h2>Novo Empréstimo</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="text-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdLivro">Cod. do Livro:</label>
        <input asp-for="IdLivro" class="form-control" required />
        <span asp-validation-for="IdLivro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdUsuario">Cod. do Usuário:</label>
        <input asp-for="IdUsuario" class="form-control" required />
        <span asp-validation-for="IdUsuario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Realizar Empréstimo</button>
</form>
