@model IEnumerable<BibliotecaMvc.Models.Livro>

<h2>Realizar Empréstimo</h2>

<form asp-action="RealizarEmprestimo" method="post">
    <div class="form-group">
        <label for="IdLivro">Selecione o Livro:</label>
        <select class="form-control" id="IdLivro" name="IdLivro">
            @foreach (var livro in Model)
            {
                <option value="@livro.IdLivro">@livro.Titulo</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="IdUsuario">ID do Usuário:</label>
        <input type="text" class="form-control" id="IdUsuario" name="IdUsuario" />
    </div>
    <button type="submit" class="btn btn-primary">Realizar Empréstimo</button>
</form>
